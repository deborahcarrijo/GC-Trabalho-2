{
  "name": "kennedytedesco/github-actions-php",
  "description": "Exemplo do uso de Github Actions para um projeto PHP",
  "license": "MIT",
  "require-dev": {
    "nunomaduro/phpinsights": "^2.0",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
